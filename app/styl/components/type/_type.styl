/* ==========================================================================
   Box Sizing
   Source: http://www.paulirish.com/2012/box-sizing-border-box-ftw/
   ========================================================================= */

*{
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
   box-sizing: border-box;
}



/* set 100% = 16px default font-size on all browser */
html
    font-size : (remove-unit(type.font-size) / remove-unit(16px)) * 100%;
    /* Stops devices from scaling up text. */
    -webkit-text-size-adjust : 100%;
    -ms-text-size-adjust     : 100%;



/*
    By specifying the font-size-adjust property, the browser will adjust the
    font size to be the same regardless of the font family
*/

html, body, caption, th, td, input, textarea, select, option, legend, fieldset, h1, h2, h3, h4, h5, h6
    font-size-adjust: 0.5;



/* Browsers set margins on all block-level elements (such as headings, lists
   and blockquotes) so a way of ensuring that typographic attention is paid to
   all such elements is to reset the margins at the beginning of your style sheet. */

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6
    margin-top: 0;
    padding-top: 0;
    padding-bottom: 0;
    font-family: type.heading-family;




body
    margin      : 0;
    padding     : 0;
    font-family : type.font-family
    font-weight : 400;
    color       : color.text;

    // optional
    if type.font-smoothing
        text-shadow: 0 -1px 1px alpha(#fff, 0.01);
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;

    setLeading();


@media all and (min-width: breakpoint.medium)
    body
        font-size: type.font-size /* equivalent to 16px */
        line-height: 1.375; /* equivalent to 22px */




/* ==========================================================================
   Base styles Anchor / Links
   Source: http://sixrevisions.com/usability/hyperlink-design/
   ========================================================================== */
a
    color:color.link;

    &:hover, &:focus
        color: color.hover-link;



/* ==========================================================================
   Base Heading styles
   ========================================================================== */

h1, .h1
    margin-bottom: emRhythm(1, modular-scale.up2)
    setType(6, modular-scale.up2)

    @media (min-width: breakpoint.medium)
        margin-bottom: emRhythm(1, modular-scale.up3)
        setType(8, modular-scale.up3)

    @media (min-width: breakpoint.large)
        margin-bottom: emRhythm(1, modular-scale.up4)
        setType(10, modular-scale.up4)


h2, .h2
    margin-bottom: emRhythm(1, modular-scale.up1)
    setType(5, modular-scale.up1)

    @media (min-width: breakpoint.medium)
        margin-bottom: emRhythm(1, modular-scale.up2)
        setType(6, modular-scale.up2)

    @media (min-width: breakpoint.large)
        margin-bottom: emRhythm(1, modular-scale.up3)
        setType(8, modular-scale.up3);


h3, .h3
    margin-bottom: emRhythm(1, modular-scale.up1)
    setType(5, modular-scale.up1)

    @media (min-width: breakpoint.large)
        margin-bottom: emRhythm(1, modular-scale.up2)
        setType(6, modular-scale.up2)


h4, .h4
    margin-bottom: emRhythm(1, modular-scale.up1)
    setType(5, modular-scale.up1)


h5, .h5,
h6, .h6
    margin-bottom: emRhythm(1)
    setType(4);



/* ==========================================================================
   Base Paragraph styles
   ========================================================================== */

p
    margin-top: 0;
    margin-bottom: emRhythm(modular-scale.line-multi)
    padding-top: 0;
    padding-bottom: 0;
    // max-width: emRhythm(96);
    -webkit-hyphens: auto;
    -epub-hyphens: auto;
    -moz-hyphens: auto;
    -ms-hyphens: auto;
    -o-hyphens: auto;
    hyphens: auto;
    word-wrap: break-word;

    @media (min-width: breakpoint.medium)
        if type.paragraph-justify
            text-align: justify


    if type.paragraph-indent
        p + p
            margin-top: emRhythm(modular-scale.line-multi * -1)
            text-indent: emRhythm(modular-scale.line-multi)



/* ==========================================================================
   Base List styles
   ========================================================================== */

ol,
ul,
dl
    margin-top: 0;
    margin-bottom: emRhythm(4)
    margin-left: emRhythm(4)
    padding-top: 0;
    padding-bottom: 0;

ul ul,
ol ol,
dl dl
    margin-left: 0;


ul
    list-style: disc;


ol
    list-style: decimal;




/* ==========================================================================
   Base abbr styles
   ========================================================================== */

// https://developer.mozilla.org/en-US/docs/CSS/font-variant
abbr
    font-variant: small-caps;
    font-weight: 600;
    text-transform: lowercase;

// Cursor changed to a question mark when it has a title
abbr[title]:hover
    cursor: help;



/* ==========================================================================
   Base blockquote styles
   ========================================================================== */

blockquote
    margin-top: emRhythm(4)
    margin-bottom: emRhythm(4)
    margin-left: 0;
    padding-top: 0;
    padding-bottom: 0;
    padding-left: emRhythm(4)
    border-left: modular-scale.vertical-unit solid lighten(#000, 50%)
    font-family: $type-serif-family;

    p
        margin-bottom: emRhythm(2)

    footer
        cite
            &:before
              content: " â€“ ";


/* ==========================================================================
   Base hr styles
   ========================================================================== */

// Creates horizontal rules that obey the baseline.
// Zero outs the user agent border
hr
    margin-top: emRhythm(4)
    margin-bottom: 0;
    border: none;
    border-top-color: type.text;
    border-top-style: solid;
    rhythmBorderTop(1px, 4);



/* ==========================================================================
   Base styles for small, em, strong, pre, code, time
   ========================================================================== */

small,
.font-small
      setType(3, modular-scale.down1)

em
    font-style: italic;

strong
    font-weight: bold;

pre,
code
    font-family: type.mono-family;

time,
.time
    text-transform: uppercase;



code, samp, kbd {
  text-align: left;
  color: color.text;

  // source: http://css-tricks.com/snippets/css/make-pre-text-wrap/
   white-space: pre-wrap;       /* css-3 */
   white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
   white-space: -pre-wrap;      /* Opera 4-6 */
   white-space: -o-pre-wrap;    /* Opera 7 */
   word-wrap: break-word;       /* Internet Explorer 5.5+ */
}
pre code {
  line-height: 1.6em;
}
pre {
  padding: 0.1em 0.5em 0.3em 0.7em;
  border-left: 11px solid lighten(color.primary, 30%);
  margin: 1.7em 0 1.7em 0.3em;
  overflow: auto;
  width: 93%;
}
